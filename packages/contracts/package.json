{
    "name": "contracts",
    "version": "0.2.0",
    "license": "MIT",
    "scripts": {
        "build": "mud build",
        "clean": "forge clean && rimraf src/codegen",
        "deploy:local": "pnpm run build && mud deploy --forgeScriptOptions='--batch-size 5' && pnpm exec ./scripts/progression/mainGameSetup.sh",
        "dev": "pnpm mud dev-contracts --rpc http://127.0.0.1:8545 --forgeScriptOptions='--batch-size 5'",
        "mud-test-gas-report": "GAS_REPORTER_ENABLED=true mud test | pnpm gas-report --stdin --save gas-report.json",
        "lint": "pnpm run prettier && pnpm run solhint",
        "prettier": "prettier --write 'src/**/*.sol'",
        "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
        "test": "mud test",
        "test-verbose": "mud test --forgeOptions=' -vvv'",
        "test-single": "mud test --forgeOptions='--match-test testOrderCreate'",
        "----- REDSTONE GARNET -----": "---------------------------",
        "deploy:redstone-garnet": "DEBUG=mud:* mud deploy --profile=redstone-garnet --forgeScriptOptions='--slow'",
        "----- REDSTONE MAINNET -----": "---------------------------",
        "deploy:redstone-mainnet": "DEBUG=mud:* mud deploy --profile=redstone --forgeScriptOptions='--slow'",
        "----- REDSTONE RHODOLITE -----": "---------------------------",
        "deploy:redstone-rhodolite": "---------------------------"
    },
    "dependencies": {
        "@latticexyz/cli": "2.0.7-account-kit-7bb60d33",
        "@latticexyz/config": "2.0.7-account-kit-7bb60d33",
        "@latticexyz/gas-report": "2.0.7-account-kit-7bb60d33",
        "@latticexyz/schema-type": "2.0.7-account-kit-7bb60d33",
        "@latticexyz/store": "2.0.7-account-kit-7bb60d33",
        "@latticexyz/world": "2.0.7-account-kit-7bb60d33",
        "@latticexyz/world-modules": "2.0.7-account-kit-7bb60d33",
        "@types/node": "^20.12.7",
        "ds-test": "github:dapphub/ds-test#c9ce3f25bde29fc5eb9901842bf02850dfd2d084",
        "forge-std": "github:foundry-rs/forge-std#b4f121555729b3afb3c5ffccb62ff4b6e2818fd3",
        "prettier": "^3.2.5",
        "prettier-plugin-solidity": "^1.3.1",
        "solhint": "^4.5.4",
        "solhint-config-mud": "2.0.7-account-kit-7bb60d33",
        "solhint-plugin-mud": "2.0.7-account-kit-7bb60d33"
    }
}