{
  "name": "contracts",
  "version": "0.2.0",
  "license": "MIT",
  "scripts": {
    "build": "mud build",
    "clean": "forge clean && rimraf src/codegen",
    "deploy:local": "pnpm run build && mud deploy",
    "dev": "pnpm mud dev-contracts",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "test": "mud test",
    "test-levels": "mud test --forgeOptions='--match-contract LevelsTest'",
    "----- TESTNET -----": "---------------------------",
    "deploy:testnet": "pnpm run build && mud deploy --profile=lattice-testnet",
    "faucet:testnet": "pnpm mud faucet --faucetUrl=https://faucet.testnet2-mud-services.linfra.xyz --address",
    "----- REDSTONE HOLESKY -----": "---------------------------",
    "deploy:redstone-holesky": "DEBUG=mud:* mud deploy --profile=redstone-holesky"
  },
  "devDependencies": {
    "@latticexyz/cli": "2.0.0-main-c40dfb75",
    "@latticexyz/config": "2.0.0-main-c40dfb75",
    "@latticexyz/schema-type": "2.0.0-main-c40dfb75",
    "@latticexyz/store": "2.0.0-main-c40dfb75",
    "@latticexyz/world": "2.0.0-main-c40dfb75",
    "@latticexyz/world-modules": "2.0.0-main-c40dfb75",
    "@latticexyz/gas-report": "2.0.0-main-c40dfb75",
    "@types/node": "^20.11.6",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1",
    "prettier": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "solhint-config-mud": "2.0.0-main-c40dfb75",
    "solhint-plugin-mud": "2.0.0-main-c40dfb75"
  }
}
